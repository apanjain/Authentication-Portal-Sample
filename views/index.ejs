<% include partials/header %>



	<%if (!currentUser){ %>
		<div style="text-align: center">
			<h1>Welcome</h1>
			<h3> Please LogiN or Sign Up</h3>
		</div>
		<div class="d-flex justify-content-center" style="margin-top: 50px">
			<a class="btn btn-outline-info" style="margin-right:10px"href="/login">Login</a>
			<a class="btn btn-outline-info" href="/register">Sign Up</a>
		</div>
		
	<% }else{ %>
		<div style="text-align: center">
			<h1>Welcome</h1>
			<h1><%= currentUser.firstName %></h1>
		</div>

		<div class="d-flex justify-content-center" style="margin-top: 50px">
			<a class="btn btn-info" style="margin-right:10px"href="/show/<%= currentUser._id %>">Go to Your Profile</a>
		</div>
	<% } %>


<% include partials/footer %>
